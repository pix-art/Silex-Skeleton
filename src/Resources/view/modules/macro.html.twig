{% macro facebookUrl(social_title, social_text) %}
    https://www.facebook.com/dialog/feed?
	app_id={{ app.config.facebook.app_id }}&
	link=http://{{ app.request.gethost }}{{ app.request.basepath }}&
	picture=http://{{ app.request.gethost }}{{ app.request.basepath }}/assets/img/share.jpg&
	name={{ social_title|url_encode(true) }}&
	description={{ social_text|url_encode(true) }}&
	redirect_uri=http://{{ app.request.gethost }}{{ app.request.basepath }}
{% endmacro %}